<%- if controller_name != 'sessions' %>
<div class=" col-xs-12 col-lg-12">
  <%= link_to "Log in", new_session_path(resource_name) %><br />
</div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class=" col-xs-12 col-lg-12">
  <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %><br />
</div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class=" col-xs-12 col-lg-12">
  <%= link_to "Pas reçu le mail de confirmation?", new_confirmation_path(resource_name) %><br />
</div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<h4 class="text-center col-xs-12 col-lg-12">Pas encore inscrit?</h4>
<div class=" col-xs-12 col-lg-12">
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-login" %><br />
</div>
<% end -%>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class=" col-xs-12 col-lg-12">
  <%= link_to "Pas reçu la confirmation de déblocage?", new_unlock_path(resource_name) %><br />
</div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
<div class=" col-xs-12 col-lg-12">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
</div>
<% end -%>

<div class="container toppage bcgblue">
  <div class="row">
<div class=" clearfix col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 text-center signinbloc">
<i class="fa fa-sign-in fa-3x"></i>
<h2 class=" col-md-12 text-center">Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class=" col-md-12 field">
    <%= f.label "Nom d'utilisateur" %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="col-md-12 field ">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="col-md-12 field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class=" col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3 actions">
    <%= f.submit "Connexion", :class => "btn btn-login form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>

<div class="container toppage bcgblue">
    <div class="row">
        <div class=" clearfix col-xs-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 text-center signinbloc">
            <i class="fa fa-sign-in fa-3x"></i>
            <h2 class=" col-md-12 text-center">Inscription</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
                <div class=" col-md-12 field">

                    <%= f.label :"Pseudo" %><br/>
                    <%= f.text_field :username, autofocus: true %>
                </div>
                </div>

                <div class="field">
                    <div class=" col-md-12 field">

                        <%= f.label :email %><br/>
                        <%= f.email_field :email, autofocus: true %>
                    </div>
                    </div>

                    <div class="field">
                        <div class=" col-md-12 field">

                            <label for="prenom">Pr√©nom</label>
                            <%= f.text_field :prenom, autofocus: true, :class => 'form-control', :id => "prenom"  %>
                        </div>
                        </div>

                        <div class="field">
                            <div class=" col-md-12 field">

                                <label for="nom">Nom</label>
                                <%= f.text_field :nom, autofocus: true, :class => 'form-control', :id => "nom"  %>
                            </div>
                            </div>

                            <div class="field">
                                <div class=" col-md-12 field">

                                    <label for="dob">Date de Naissance</label>
                                    <%= f.date_select :dob, autofocus: true, :class => 'form-control', :start_year => 1900, :end_year => Time.now.year   %>
                                </div>
                                </div>

                                <div class=" col-md-12 field">

                                    <p>Sexe:</p>
                                    <%= radio_button_tag(:gender, false) %>
                                    <%= label_tag(:gender, "Homme") %>
                                    <%= radio_button_tag(:gender, true) %>
                                    <%= label_tag(:gender, "Femme") %>
                                </div>

                                <div class="field">
                                    <div class=" col-md-12 field">

                                        <label for="adress">Adresse</label>
                                        <%= f.text_field :adress, autofocus: true, :class => 'form-control', :id => "adress"  %>
                                    </div>
                                    </div>
                                    <div class="field">
                                        <div class=" col-md-12 field">

                                            <label for="zipcode">Code postal</label>
                                            <%= f.text_field :zipcode, autofocus: true, :class => 'form-control', :id => "zipcode"  %>
                                        </div>
                                        </div>
                                        <div class="field">
                                            <div class=" col-md-12 field">

                                                <label for="city">Ville</label>
                                                <%= f.text_field :city, autofocus: true, :class => 'form-control', :id => "city"  %>
                                            </div>
                                            </div>

                                            <div class="field">
                                                <div class=" col-md-12 field">

                                                    <label for="email">Telephone</label>
                                                    <%= f.text_field :phone, :class => 'form-control', :id => "phone"  %>
                                                </div>
                                                </div>

                                                <div class="field">
                                                    <div class=" col-md-12 field">

                                                        <%= f.label :password %>
                                                        <% if @minimum_password_length %>
                                                        <em>(<%= @minimum_password_length %>
                                                            characters minimum)</em>
                                                        <% end %><br/>
                                                        <%= f.password_field :password, autocomplete: "off" %>
                                                    </div>
                                                    </div>

                                                    <div class="field">
                                                        <div class=" col-md-12 field">

                                                            <%= f.label :password_confirmation %><br/>
                                                            <%= f.password_field :password_confirmation, autocomplete: "off" %>
                                                        </div>
                                                        </div>

                                                        <div class=" col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4 col-md-6 col-md-offset-3 actions">
                                                            <%= f.submit "Inscription", :class => "btn btn-login form-control" %>
                                                        </div>

                                                        <% end %>

                                      
                                                    </div>
                                                </div>
                                            </div>

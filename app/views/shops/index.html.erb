<h1>Listing Shops</h1>

<table>
  <thead>
    <tr>
      <th>NÂ°</th>
      <th>Brand</th>
      <th>Name</th>
      <th>Address</th>
      <th>Shop ID</th>
      <th>Zipcode</th>
      <th>Drive</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% a=1%>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= a %></td>
        <td><%= Brand.find(shop.brand_id).name %></td>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.id %></td>
        <td><%= shop.zipcode %></td>
        <td><%= shop.isdrive %></td>
        <td><%= shop.latitude %></td>
        <td><%= shop.longitude %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% a +=1 %>
    <% end %>
  </tbody>
</table>

<br>


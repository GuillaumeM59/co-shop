<p id="notice"><%= notice %></p>

<h1>Listing Coins</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bid</th>
      <th>Comment1</th>
      <th>Comment2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.user_id %></td>
        <td><%= coin.bid_id %></td>
        <td><%= coin.comment1 %></td>
        <td><%= coin.comment2 %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_tag charges_path do %>
<article>


  <h1>page paiment</h1>

  <h2>recapitulatif</h2>

  <%=current_user.avatar%>
  <%=current_user.prenom%>
  <%=current_user.nom%>
  <%=current_user.email%>
  <%=current_user.phone%>


  <% if flash[:error].present? %>
  <div id="error_explanation">
    <p><%= flash[:error] %></p>
  </div>
  <% end %>
  <label class="amount">
    <span>Amount: 2.50EUR</span>
  </label>
</article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A month's subscription" data-amount="250" data-locale="auto"></script>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Validations</h1>

<table>
  <thead>
    <tr>
      <th>Bid</th>
      <th>Driver</th>
      <th>Pass</th>
      <th>Code</th>
      <th>Validated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @validations.each do |validation| %>
      <tr>
        <td><%= validation.bid_id %></td>
        <td><%= validation.driver_id %></td>
        <td><%= validation.pass_id %></td>
        <td><%= validation.code %></td>
        <td><%= validation.validated %></td>
        <td><%= link_to 'Show', validation %></td>
        <td><%= link_to 'Edit', edit_validation_path(validation) %></td>
        <td><%= link_to 'Destroy', validation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


  background-size: cover;
}
.searchtitle {
  padding-top: 70px;
}
// -------------- reservationmodal
body.modal-open #wrap {
  -webkit-filter: blur(7px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px);
  border: solid 1px;
}
.modal-backdrop {
  background: #f7f7f7;
}
.close {
  font-size: 50px;
  display: block;
}

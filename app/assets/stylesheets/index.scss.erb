}
.toppage{
  margin-top: 90px;
}
.intro-header {
  padding-top: 50px;
  /* If you're making other pages, make sure there is 50px of padding to make sure the navbar doesn't overlap content! */
  text-align: center;
  color: #ffffff;
  background: url("/img/coshop-1080.jpg") no-repeat center center;
  background-size: cover;
}
.intro-message {
  position: relative;
  padding-top: 15%;
  padding-bottom: 8%;
}
.intro-message > h1 {
  margin: 10px;
  text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
  // font-size: 5em;
}
.offert {
  font-size: 1em;
  text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
  padding-top: 1%
  // font-size: 5em;
}
.actors {
  margin-bottom: 2%;
  padding-left: 14.5%;
}
.actorblock {
  margin: 0 2%;
  border: 2px solid rgb(163, 163, 163);
  border-radius: 5px;
  color: black;
  font-weight: 600
}
.loggedannounce{
  border: 2px solid rgb(163, 163, 163);
  border-radius: 5px;
  color: black;
  font-weight: 600;
  margin-top: 4%
}
.driverblock {
  background: linear-gradient( rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6) ), url(<%= asset_path 'driver2.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
}
.passengerblock {
  background: linear-gradient( rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6) ), url(<%= asset_path 'busstop.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
}
.videoblock {
  background-color: rgba(255, 255, 255, 0.6)
}

.actorblock p {
  padding-top: 5%;
  font-size: 1.2em
}
.passengerblock p {
  padding-top: 0;
  font-size: 1.2em
}


.economies {
  font-size: 2.5em;
  font-weight: 600;
  line-height: 1.5em;
  padding: 0 5%;

}

.btn-search {
  // font-size: 1.2em;
  font-weight: bold;
  border: solid 1px #ffffff;
  background-color: #1cf453;
  color: #F0EDDF;
}
.btn-search:hover {
  border: solid 1px #ffffff;
  background-color: #19D649;
  color: #F0EDDF;
}
.intro-divider {
  width: 400px;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.intro-message > h3 {
  text-shadow: 2px 2px 3px rgba(0,0,0,0.6);
}
.reservation {
